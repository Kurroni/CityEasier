{{!-- For Museums --}}
<div>
    <h2>{{event.[0].name}}</h2>

    <img src="{{event.[0].img}}" alt="">

    <h4>Type: {{event.[0].type}} </h4>

    <h4>Rating: {{event.[0].rating}}</h4>

    <h4>City: {{event.[0].contact.address}} </h4>

    <button class="favourite" data-placeid="{{event.[0]._id}}">Button to add favourites</button>

    <h4><a href="{{event.[0].web}}">web</a></h4>

    <p>Description : {{event.[0].description}} </p>

    {{#each event.[0].comments}}
    <div>
        <p>Name: {{this.name}}</p>
        <p>date: {{this.date}}</p>
        <p>comment: {{this.comment}}</p>
        <br>
    </div>
    {{/each}}
</div>