{{!-- In this page that is in a city and show the category --> nombre barcelona y datos categoria --}}

<div class="place-type-wrapper">
    {{#if arrayRestaurantInCity}}
    <h3>You are in: {{arrayRestaurantInCity.[0].contact.address}}</h3>
    {{/if}}
    {{#if arrayMuseumInCity}}
    <h3>You are in: {{arrayMuseumInCity.[0].contact.address}}</h3>
    {{/if}}
    {{#if arrayEventInCity}}
    <h3>You are in: {{arrayEventInCity.[0].contact.address}}</h3>
    {{/if}}
    {{#if arrayHotelInCity}}
    <h3>You are in: {{arrayHotelInCity.[0].contact.address}}</h3>
    {{/if}}
    <br>


    {{!-- For each museum in Barcelona we will have all the information below --}}
    {{#each arrayMuseumInCity}}
    <div class="place-type-one">
        <img src="{{this.img}}" alt="Photo of restaurant">
        <div class="place-description">
            <h2><a href="/singleplace/Museum/{{this.name}}">Name: {{this.name}}</a></h2>
            <p>Rating: {{this.rating}}</p>
            <p>Type: {{this.type}}</p>
            <p>City: {{this.contact.address}}</p>
            <br>
        </div>
    </div>

    {{/each}}


    {{#each arrayRestaurantInCity}}
    <div class="place-type-one">
        <img src="{{this.img}}" alt="Photo of restaurant">
        <div class="place-description">
            <h2><a href="/singleplace/Barcelona/{{this.name}}">Name: {{this.name}}</a></h2>
            <p>Rating: {{this.rating}}</p>
            <p>Type: {{this.type}}</p>
            <p>City: {{this.contact.address}}</p>
            <br>
        </div>
    </div>
    {{/each}}
    {{!-- For each event in Barcelona we will have all the information below --}}
    {{#each arrayEventInCity}}
    <div class="place-type-one">
        <img src="{{this.img}}" alt="Photo of event">
        <div class="place-description">
            <h2><a href="/singleplace/Event/{{this.name}}">Name: {{this.name}}</a></h2>
            <p>Rating : {{this.rating}}</p>
            <p>Type: {{this.type}}</p>
            <p>City: {{this.contact.address}}</p>
            <br>
        </div>
    </div>

    {{/each}}

    {{!-- For each hotel in Barcelona we will have all the information below --}}
    {{#each arrayHotelInCity}}
    <div class="place-type-one">
        <img src="{{this.img}}" alt="Photo of event">
        <div class="place-description">
            <h2><a href="/singleplace/Hotel/{{this.name}}">Name: {{this.name}}</a></h2>
            <p>Rating : {{this.rating}}</p>
            <p>Type : {{this.type}}</p>
            <p>City: {{this.contact.address}}</p>
            <br>
        </div>
    </div>
    {{/each}}
</div>